{
  "$anchor": "navigationTitle-course",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$patch": {
    "source": {
      "$ref": "course"
    },
    "with": {
      "properties": {
        "_globals": {
          "type": "object",
          "default": {},
          "properties": {
            "_navigationTitle": {
              "type": "object",
              "default": {},
              "required": ["_navOrder"],
              "properties": {
                "navigationTitle": {
                  "type": "string",
                  "title": "Navigation Title",
                  "default": "Page sections",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "_navOrder": {
                  "type": "number",
                  "title": "Navigation bar order",
                  "default": 0,
                  "inputType": "Text",
                  "validators": []
                }
              }
            }
          }
        },
        "_navigationTitle": {
          "type": "object",
          "title": "Navigation Title",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enable Navigation Title",
              "description": "Set to true to enable the 'Navigation Title' feature.",
              "default": false
            },
            "_hideForMobile": {
              "type": "boolean",
              "title": "Hide title for mobile view",
              "description": "Useful to declutter the navigation bar for mobile view where limited space is available.",
              "default": false
            },
            "title": {
              "type": "string",
              "title": "Title",
              "description": "The text that appears in the navigation bar",
              "default": "",
              "_adapt": {
                "translatable": true
              }
            }
          }
        }
      }
    }
  }
}
